<%= form_with(model: brewery, local: true) do |form| %>
  <% if brewery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(brewery.errors.count, "error") %> prohibited this brewery from being saved:</h2>

      <ul>
      <% brewery.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group row">
    <%= form.label :name, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :name, id: :brewery_name, class:"col-sm-7" %>
  </div>

  <div class="field form-group row">
    <%= form.label :year, class:"col-sm-2 col-form-label" %>
    <%= select_year(Time.current.year, start_year: 1040, end_year: Time.current.year, field_name: :year, prefix: :brewery, class:"col-sm-7") %>
  </div>

  <div class="field form-group row">
    <%= form.label :active, class:"col-sm-2 col-form-label" %>
    <%= form.check_box :active %>
  </div>

  <div class="actions form-group row">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
