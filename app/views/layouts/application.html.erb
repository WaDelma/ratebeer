<!DOCTYPE html>
<html>
  <head>
    <title>Ratebeer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" role="navigation">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'breweries', breweries_path, { class: "nav-link" } %>
          </li>      
          <li class="nav-item">
            <%= link_to 'beers', beers_path, { class: "nav-link" } %>
          </li>     
          <li class="nav-item">
            <%= link_to 'styles', styles_path, { class: "nav-link" } %>
          </li>   
          <li class="nav-item">
            <%= link_to 'ratings', ratings_path, { class: "nav-link" } %>
          </li>       
          <li class="nav-item">
            <%= link_to 'users', users_path, { class: "nav-link" } %>
          </li>  
          <li class="nav-item">
            <%= link_to 'clubs', beer_clubs_path, { class: "nav-link" } %>
          </li>   
          <li class="nav-item">
            <%= link_to 'places', places_path, { class: "nav-link" } %>
          </li>
          <li class="divider-vertical"></li>
          <% if current_user %>
          <li class="nav-item dropdown">
              <a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle" aria-haspopup="true">
                <%= current_user.username %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu" aria-label="submenu">
                  <li><%= link_to "My page", current_user, { class: "dropdown-item" } %></li>
                  <li><%= link_to 'Rate a beer ', new_rating_path, { class: "dropdown-item" } %></li>
                  <li><%= link_to 'Join a club ', new_membership_path, { class: "dropdown-item" } %></li>
                  <div class="dropdown-divider"></div>
                  <li><%= button_to 'signout', signout_path, { class: "dropdown-item", method: :delete  } %></li>
              </ul>
          </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'signin', signin_path, { class: "nav-link" } %>
            </li>  
            <li class="nav-item">
              <%= link_to 'signup', signup_path, { class: "nav-link" } %>
            </li>                        
          <% end %>                            
        </ul>
      </div>
    </nav>

    <% if notice %>
      <div class="alert alert-primary" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <div class="container">
      <div class="row">
        <div class="col-sm-8">
          <%= yield %>
        </div>
        <div class="col-sm-4">
          <img 
            src="http://www.cs.helsinki.fi/u/mluukkai/wadror/pint.jpg" 
            width="200"
            style="padding-top:30px"
          >
        </div>
      </div>
    </div>
  </body>
</html>