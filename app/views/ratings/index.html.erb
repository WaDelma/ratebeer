<h2>List of ratings</h2>

<p>Number of ratings: <%= @ratings.count %> </p>
<table class="table table-hover">

  <tbody>
    <thead>
      <tr>
        <th>Score</th>
        <th>Beer</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.score %></td>
        <td><%= link_to "#{rating.beer}", rating.beer %></td>
        <td><%= link_to "#{rating.user.username}", rating.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
