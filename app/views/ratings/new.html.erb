<h2>Create new rating</h2>

<%= form_for(@rating) do |f| %>
  <% if @rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited rating from being saved:</h2>

      <ul>
      <% @rating.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group row">
    <%= f.label :beer_id, class:"col-sm-2 col-form-label" %>
    <%= f.select :beer_id, options_from_collection_for_select(@beers, :id, :to_s, selected: @rating.beer_id), class:"col-sm-7" %>
  </div>
  <div class="field form-group row">
    <%= f.label :score, class:"col-sm-2 col-form-label" %>
    <%= f.number_field :score, min: 0, max: 50, class:"col-sm-7" %>
  </div>
  <div class="field form-group row">
    <%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>
