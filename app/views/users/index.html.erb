<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Rated beers</th>
      <th>Total ratings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.size %></td>
        <td><%= user.ratings.size %></td>
        <% if admin? and not user.active %>
          <td><span class="badge badge-info">account closed</span></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>