<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @user.new_record? %>
    <div class="field form-group row">
      <%= form.label :username, class:"col-sm-2 col-form-label" %>
      <%= form.text_field :username, class:"col-sm-7" %>
    </div>
  <% end %>

  <div class="field form-group row">
    <%= form.label :password, class:"col-sm-2 col-form-label" %>
    <%= form.password_field :password, class:"col-sm-7" %>
  </div>

  <div class="field form-group row">
    <%= form.label "Confirmation", class:"col-sm-2 col-form-label" %>
    <%= form.password_field :password_confirmation, class:"col-sm-7" %>
  </div>

  <div class="actions form-group row">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
