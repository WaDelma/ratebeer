<%= form_with(model: membership, local: true) do |form| %>
  <% if membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(membership.errors.count, "error") %> prohibited this join request from being saved:</h2>

      <ul>
      <% membership.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @beer_clubs.empty? %>
    No clubs to join
  <% else %>
    <div class="field form-group row">
      <%= form.label :beer_club_id, class:"col-sm-2 col-form-label" %>
      <%= form.select :beer_club_id, options_from_collection_for_select(@beer_clubs, :id, :to_s, selected: @membership.beer_club_id) %>
    </div>

    <div class="actions" form-group row>
      <%= form.submit class:"btn btn-primary" %>
    </div>

  <% end %>

<% end %>
