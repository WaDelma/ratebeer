<%= form_with(model: membership, local: true) do |form| %>
  <% if membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(membership.errors.count, "error") %> prohibited this join request from being saved:</h2>

      <ul>
      <% membership.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @beer_clubs.empty? %>
    No clubs to join
  <% else %>
    <%= form.select :beer_club_id, options_from_collection_for_select(@beer_clubs, :id, :to_s) %>  
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
