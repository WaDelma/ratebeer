<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery_id %>
</p>

<p>
  <strong>Rating:</strong>
  <% if @beer.ratings.empty? %>
   No rating
  <% else %>
   <%= @beer.average_rating() %> average with <%= pluralize(@beer.ratings.length, "rating") %>
  <% end %>
</p>

<% if current_user %>
<%= link_to 'Edit', edit_beer_path(@beer) %> |
<% end %>
<%= link_to 'Back', beers_path %>
