<%= form_with(model: beer, local: true) do |form| %>
  <% if beer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

      <ul>
      <% beer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group row">
    <%= form.label :name, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :name, id: :beer_name, class:"col-sm-7" %>
  </div>

  <div class="field form-group row">
    <%= form.label :style_id, class:"col-sm-2 col-form-label" %>
    <%= form.select :style_id, options_from_collection_for_select(@styles, :id, :name, selected: @beer.style_id), class:"col-sm-7" %>
  </div>

  <div class="field form-group row">
    <%= form.label :brewery_id, class:"col-sm-2 col-form-label" %>
    <%= form.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name, selected: @beer.brewery_id), class:"col-sm-7" %>
  </div>

  <div class="actions form-group row">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
